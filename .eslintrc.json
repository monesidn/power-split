{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "google"
    ], 
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-tsdoc"
    ],
    "rules": {
        "indent": ["error", 4],
        "no-unused-vars": "off", // Bugged on Typescript
        "curly": "off",
        "max-len": ["error", {"code": 120}],
        "comma-dangle": ["error", "never"],
        "object-curly-spacing": ["error", "always"],
        "valid-jsdoc": "off", 
        "tsdoc/syntax": "warn"
    }
}